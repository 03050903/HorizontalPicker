<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.goodiebag.horizontalpicker.HorizontalPicker
        android:id="@+id/hpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        app:textSize="18sp"
        app:itemMargin="5dp"
        app:itemHeight="40dp"
        app:itemWidth="40dp"
        app:backgroundSelector="@drawable/selector_background_example"
        app:textColorSelector="@color/selector_text_view" />

    <com.goodiebag.horizontalpicker.HorizontalPicker
        android:id="@+id/hpImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        app:itemMargin="5dp"
        app:itemHeight="40dp"
        app:itemWidth="40dp"
        app:backgroundSelector="@drawable/selector_background_example"
        app:textColorSelector="@color/selector_text_view"/>


</LinearLayout>
